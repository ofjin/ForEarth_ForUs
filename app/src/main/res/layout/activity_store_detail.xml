<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="440dp"
                android:layout_height="68dp"
                android:background="@drawable/rectangle112">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="133dp"
                    android:layout_marginTop="27dp"
                    android:text="스토어"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/cart_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="440dp"
                android:layout_height="630dp"
                android:orientation="vertical"
                android:background="@drawable/rectangle131">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="230dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/y_garbage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="음식물 쓰레기 봉투(2L)"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="190p 깃확인"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/black"/>
                <ImageView
                    android:layout_width="400dp"
                    android:layout_gravity="center"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/line31" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle102"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="50dp"/>
                    <ImageButton
                        android:id="@+id/minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/minus"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="70dp"/>
                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="65dp"
                        android:layout_marginLeft="102dp"
                        android:textColor="@color/black"/>
                    <ImageButton
                        android:id="@+id/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plus"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="120dp"/>

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="190P"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="63dp"
                        android:layout_marginLeft="280dp"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle33"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="50dp"
                        android:text="장바구니"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle333"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="15dp"
                        android:text="구매하기"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>







        </LinearLayout>
    </ScrollView>

